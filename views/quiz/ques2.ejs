<% layout('layouts/boilerplate') %>

<section class="ques2">
  <div class="gender-selection">
    <label>Choose Your Gender</label>
    <form method="post" action="/ques2" onsubmit="return validateSelection()">
        <div class="buttons">
            <button type="button" class="gender-btn" onclick="selectGender(this, 'M')">Male</button>
            <button type="button" class="gender-btn" onclick="selectGender(this, 'F')">Female</button>
        </div>
        <input type="hidden" name="gender" id="gender" class="hidden-input">
        <button class="next-btn">Next</button>
    </form>
    <a href="ques1"><button class="prev-btn">Previous</button></a>
  </div>
</section>

<script>
  function selectGender(button, gender) {
      const hiddenInput = document.getElementById('gender');
      
      // Check if the button is already selected
      if (button.classList.contains('selected')) {
          // Deselect the button
          button.classList.remove('selected');
          hiddenInput.value = ''; // Clear the hidden input
      } else {
          // Remove the "selected" class from all buttons
          const buttons = document.querySelectorAll('.gender-btn');
          buttons.forEach(btn => btn.classList.remove('selected'));

          // Add the "selected" class to the clicked button
          button.classList.add('selected');
          hiddenInput.value = gender; // Set the hidden input to the selected value
      }
  }

  function validateSelection() {
      const gender = document.getElementById('gender').value;
      if (!gender) {
          alert('Please select a gender before proceeding.');
          return false; // Prevent form submission
      }
      return true; // Allow form submission
  }
</script>



<style>
  * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
  }

  .ques2 {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #EDE6E2; /* Light blue background */
  }

  .gender-selection {
      text-align: center;
  }

  label {
      font-size: 2rem;
      font-weight: 600;
      color: #1d3557;
      margin-bottom: 2rem;
      display: block;
  }

  .buttons {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-bottom: 2rem;
  }

  .gender-btn {
      font-size: 1.2rem;
      font-weight: 500;
      color: #1d3557;
      background-color: #fff;
        padding: 0.5rem 2rem;
        border-radius: 5px;
        border: 1px solid black;
      cursor: pointer;
      transition: background-color 0.3s, color 0.3s;
  }

  .gender-btn:hover {
      background-color: #1d3557;
      color: #fff;
  }

  .gender-btn.selected {
      background-color: #1d3557;
      color: #fff;
    }

    .prev-btn, .next-btn {
    padding: 0.8rem 2.5rem;
    font-size: 1rem;
    font-weight: 500;
    color: #1d3557;
    background-color: #fff;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s;
    margin-top: 20px;
  }

  .prev-btn:hover, .next-btn:hover {
    background-color: #1d3557;
    color: #fff;
  }

  .prev-btn {
    position: absolute;
    bottom: 10%;
    left: 15%;
  }

  .next-btn {
    position: absolute;
    bottom: 10%;
    right: 15%;
  }
</style>


