<% layout('layouts/boilerplate') %>
<section class="ques11">
    <div class="style-q1">
        <div class="container_q11"></div>
        <h2>Do you like this style?</h2>
        
        <form method="post" action="/ques11">
            <div class="clothing-display">
                <img src="image/gcloth.jpg" alt="Clutch" class="clothing-item single-item">    
            </div>
        <div class="response-buttons">
            <button type="button" class="response-btn" onclick="selectStyle(this, 'Style 1: Yes')">Yes</button>
            <button type="button" class="response-btn" onclick="selectStyle(this, 'Style 1: No')">No</button>
            <input type="hidden" name="style" id="style" class="hidden-input">
        </div>
            <button class="next-btn">Next</button>
        </form>
        <a href="/ques12" class="skip-link">Skip this question</a>
    
        <a href="/ques10"><button class="prev-btn">Previous</button></a>
    </div>
</section>

<script>
    function selectStyle(button, style) {
        const hiddenInput = document.getElementById('style');
        
        // Check if the button is already selected
        if (button.classList.contains('selected')) {
            // Deselect the button
            button.classList.remove('selected');
            hiddenInput.value = ''; // Clear the hidden input
        } else {
            // Remove the "selected" class from all buttons
            const buttons = document.querySelectorAll('.response-btn');
            buttons.forEach(btn => btn.classList.remove('selected'));
  
            // Add the "selected" class to the clicked button
            button.classList.add('selected');
            hiddenInput.value = style; // Set the hidden input to the selected value
        }
    }
</script>

<style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
  }

  .ques11 {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #EDE6E2; /* Light background */
  }
  .style-q1 h2{
        font-size: 1.8rem;
        font-weight: 500;
        color: #1d3557;
        margin-bottom: 2rem;
    }
    
    .clothing-display {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 2rem;
    }

    .clothing-item {
        width: 150px;
        height: auto;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 5px;
        background-color: #f9f9f9;
    }

    .single-item {
        margin-top: 1rem;
    }

    .response-buttons {
        margin: 2rem 0;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }
    .response-btn {
        font-size: 1rem;
        font-weight: bold;
        color: #1d3557;
        background-color: #fff;
        padding: 0.5rem 2rem;
        border-radius: 5px;
        border: 1px solid black;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .response-btn:hover {
        background-color: #1d3557;
        color: #fff;
    }

    .response-btn.selected {
        background-color: #1d3557;
        color: #fff;
    }

    .skip-link {
        display: inline-block;
        margin-top: 1rem;
        font-size: 1rem;
        margin-left: 5rem;
        color: #1d3557;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .skip-link:hover {
        color: #457b9d;
    }

    .prev-btn, .next-btn {
    padding: 0.8rem 2.5rem;
    font-size: 1rem;
    font-weight: 500;
    color: #1d3557;
    background-color: #fff;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s;
    margin-top: 20px;
    }

  .prev-btn:hover, .next-btn:hover {
    background-color: #1d3557;
    color: #fff;
  }

  .prev-btn {
    position: absolute;
    bottom: 10%;
    left: 15%;
  }

  .next-btn {
    position: absolute;
    bottom: 10%;
    right: 15%;
  }
</style>
