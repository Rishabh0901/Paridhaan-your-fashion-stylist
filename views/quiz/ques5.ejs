<% layout('layouts/boilerplate') %>

<section class="ques5">
    <div class="custom-q1">
        
        
        <div class="input-container">
            <h2>If your outfit were a season, which one would it be?</h2>
            <form method="post" action="/ques5">
              <div class="input-box">
                <button type="button" class="opt" onclick="toggleSelection(this, 'Spring')">Spring (Floral and bright)</button><br>
                <button type="button" class="opt" onclick="toggleSelection(this, 'Summer')">Summer (Light and breezy)</button><br>
                <button type="button" class="opt" onclick="toggleSelection(this, 'Fall')">Fall (Earthy and layered)</button><br>
                <button type="button" class="opt" onclick="toggleSelection(this, 'Winter')">Winter (Cozy and chic)</button><br>
              </div>
              <input type="hidden" name="seasons" id="seasons" class="hidden-input">
              <button class="next-btn">Next</button>
            </form>
          </div>

        <!-- this is previous button  -->
            <a href="ques4"><button class="prev-btn">Previous</button></a>
    </div>
</section>

<script>
  let selectedSeasons = []; // To keep track of selected options

  function toggleSelection(button, season) {
    const hiddenInput = document.getElementById('seasons');

    if (button.classList.contains('selected')) {
      // Deselect the button
      button.classList.remove('selected');
      selectedSeasons = selectedSeasons.filter(item => item !== season); // Remove season
    } else {
      // Select the button
      button.classList.add('selected');
      selectedSeasons.push(season); // Add season
    }

    // Update hidden input value with the current selections
    hiddenInput.value = JSON.stringify(selectedSeasons);
  }
</script>


<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    .ques5 {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #EDE6E2; /* Light blue background */
    }

    .custom-q1 {
        text-align: center;
        background-color: transparent;
        padding: 1rem;
    }

    label {
        font-size: 1.8rem;
        font-weight: 500;
        color: #1d3557;
        display: block;
        margin-bottom: 5rem;
    }

    .input-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .input-container h2 {
        text-align: center;
        font-size: 1.8rem;
        font-weight: 500;
        color: #1d3557;
        margin-bottom: 1rem;
    }

    .input-box {
        text-align: left;
        width: 100%;
        display: flex;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .input-box .opt {
        font-size: 1rem;
        font-weight: 500;
        color: #1d3557;
        background-color: #fff;
        padding: 0.5rem 2rem;
        border-radius: 5px;
        border: 1px solid black;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

    .input-box .opt:hover{
        background-color: #1d3557;
        color: #fff;
    }

    .opt.selected {
      background-color: #1d3557;
      color: #fff;
    }

    .prev-btn, .next-btn {
    padding: 0.8rem 2.5rem;
    font-size: 1rem;
    font-weight: 500;
    color: #1d3557;
    background-color: #fff;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s;
    margin-top: 20px;
  }

  .prev-btn:hover, .next-btn:hover {
    background-color: #1d3557;
    color: #fff;
  }

  .prev-btn {
    position: absolute;
    bottom: 10%;
    left: 15%;
  }

  .next-btn {
    position: absolute;
    bottom: 10%;
    right: 15%;
  }
</style>
