<% layout('layouts/boilerplate') %>

<section class="ques5">
    <div class="custom-q1">
        
        <div class="input-container">
            <h2>Pick a vacation spot to match your style:</h2>
            <form method="post" action="/ques6">
                <div class="input-box">
                    <button  type="button" class="opt" onclick="toggleSelection(this, 'Tropical')">A tropical beach (Relaxed and colorful)</button><br>
                    <button  type="button" class="opt" onclick="toggleSelection(this, 'European')">A European city (Elegant and timeless)</button><br>
                    <button  type="button" class="opt" onclick="toggleSelection(this, 'Mountain')">A mountain retreat (Functional and warm)</button><br>
                    <button  type="button" class="opt" onclick="toggleSelection(this, 'Music')">A music festival (Bold and trendy)</button><br>
                </div>
                <input type="hidden" name="vacations" id="vacations" class="hidden-input">
                <button class="next-btn">Next</button>
            </form>
        </div>

        <!-- this is previous button  -->
            <a href="ques5"><button class="prev-btn">Previous</button></a>
    </div>
</section>

<script>
    let selectedVacations = []; // To keep track of selected options
  
    function toggleSelection(button, vacation) {
      const hiddenInput = document.getElementById('vacations');
  
      if (button.classList.contains('selected')) {
        // Deselect the button
        button.classList.remove('selected');
        selectedVacations = selectedVacations.filter(item => item !== vacation); // Remove vacation
      } else {
        // Select the button
        button.classList.add('selected');
        selectedVacations.push(vacation); // Add vacation
      }
  
      // Update hidden input value with the current selections
      hiddenInput.value = JSON.stringify(selectedVacations);
    }
  </script>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    .ques5 {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #EDE6E2; /* Light blue background */
    }

    .custom-q1 {
        text-align: center;
        background-color: transparent;
        padding: 1rem;
    }

    label {
        font-size: 1.8rem;
        font-weight: 500;
        color: #1d3557;
        display: block;
        margin-bottom: 5rem;
    }

    .input-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .input-container h2 {
        text-align: center;
        font-size: 1.8rem;
        font-weight: 500;
        color: #1d3557;
        margin-bottom: 1rem;
    }

    .input-box {
        text-align: left;
        width: 100%;
        display: flex;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .input-box .opt {
        padding: .5rem 2rem;
        font-size: 1rem;
        font-weight: 500;
        color: #1d3557;
        background-color: #fff;
        border: 1px solid #1d3557;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

    .input-box .opt:hover{
        background-color: #1d3557;
        color: #fff;
    }

    .opt.selected {
      background-color: #1d3557;
      color: #fff;
    }

    .prev-btn, .next-btn {
    padding: 0.8rem 2.5rem;
    font-size: 1rem;
    font-weight: 500;
    color: #1d3557;
    background-color: #fff;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s;
    margin-top: 20px;
  }

  .prev-btn:hover, .next-btn:hover {
    background-color: #1d3557;
    color: #fff;
  }

  .prev-btn {
    position: absolute;
    bottom: 10%;
    left: 15%;
  }

  .next-btn {
    position: absolute;
    bottom: 10%;
    right: 15%;
  }
</style>