<% layout('layouts/boilerplate') %>

<section class="main-container">
    <!-- Left Section -->
    <div class="left-container">
      <div class="image-box">
        <img src="<%= cloth.image.Image_url %>" alt="<%= cloth.Brand %> <%= cloth.Cloth_category %>" class="card-image-cloth">
      </div>
      <form method="get" action="/try_on">
        <button class="try-style">Try on this style</button>
      </form> 
    </div>
    <!-- Right Section -->
    <div class="right-container">
        <h2>Find your fashion</h2>
        <div class="text-box">
            <div class="text-left">
                <p brand><%= cloth.Brand %></p>
                <p><%= cloth.Material %> <%= cloth.Cloth_category %> (<%= cloth.Wear_type %>)</p>
                <p>Fit Type <%= cloth.Fit_type %></p>
                <p><%= cloth.Occasion %> wear</p>
                <p><%= cloth.Colors.join(", ") %></p>
                <p>Available in <%= cloth.Size.join(", ") %></p>
            </div>
            <div class="text-right">
                <p>Wash Care and Instructions: <%= cloth.Wash_care.join(", ") %></p>
                <p>Suitable for <%= cloth.Season %> season</p>
                <p>Price ₹<%= cloth.Discounted_price %> <del>₹<%= cloth.Price %></del> (<%= cloth.Discount_percentage %>)</p>
                <a href="<%= cloth.image.Purchase_link %>"> Tap to Purchase </a>
            </div>   
        </div>
    </div>
  <!-- Browse Button -->
  <div class="browse-container">
    <form method="get" action="/cloth">
        <button class="browse-styles">Browse other styles</button>
    </form>
  </div>
</section>

